{% extends "publico_base.njk" %}
{% block titulo %}Juegos | Listado{% endblock %}
{% block contenido %}
    <div class="container">
        <h1 class="text-center">Listado de juegos</h1>
        {% for juego in juegos %}
            <div class="row m-1">
                <div class="p-1 col-6 bg-dark text-white text-center">{{ juego.nombre }}</div>
                <div class="col-auto ms-auto">
                    <form action="/juegos/{{juego.id}}" method="post">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </div>
                <div class="col-auto ms-auto">
                    <a class="btn btn-success" href="/juegos/editar/{{ juego.id }}">Editar</a>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-12">No hay juegos que mostrar.</div>
            </div>
        {% endfor %}
        <a class="btn btn-primary w-100 mt-2" href="/juegos/nuevo">AÃ±adir nuevo juego</a>

    </div>
{% endblock %}