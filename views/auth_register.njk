{% extends "publico_base.njk" %}
{% block titulo %}Juegos | Registro{% endblock %}
{% block contenido %}
    <h1>Registrarse</h1>
    <form action="/auth" method="post">
        <label for="login">Nombre</label>
        <input type="text" name="login" placeholder="Nombre de usuario" class="mt-1 mb-2 rounded w-100" value="{{usuario.login}}">
        <label for="password">Contraseña</label>
        <input type="password" name="password" placeholder="Contraseña" class="mt-1 mb-2 rounded w-100" value="{{usuario.password}}">
            <button type="submit" class="btn btn-primary">Registrarse</button>
    </form>


    {% if error %}
        <div class="alert alert-danger mt-3" role="alert">{{ error}} </div>
    {% endif %}

{%endblock%}